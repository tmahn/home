#!/bin/sh
#
# Shell wrapper to get the path right for windows
#
# Create a shortcut with target
#  "c:\Program Files\cygwin\usr\X11R6\bin\run.exe" bash "/home/neitsch/bin/start-xterm"

# The user's *shrc should clean up the path, because /etc/profile is going
# to add to it again.
PATH=/usr/local/bin:/usr/bin:/bin:/usr/X11R6/bin:/cygdrive/c/WINDOWS/system32:/cygdrive/c/WINDOWS:/cygdrive/c/WINDOWS/System32/Wbem
export PATH

cd "${HOME}"

exec xterm -display 127.0.0.1:0.0 -ls
