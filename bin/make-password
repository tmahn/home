#!/usr/bin/env python

import os
import re
import string
import random

def __init__():
    global sys_random, words

    words = open('/usr/share/dict/words').readlines()
    word_re = re.compile('^[a-zA-Z]+$')
    words = [word for word in words if word_re.match(word)]

    sys_random = random.SystemRandom()

def random_int(bytes):
    return sys_random.randint(0, 100000)

def random_word():
    return sys_random.choice(words).strip()

def random_punctuation():
    return sys_random.choice(string.punctuation)

if __name__ == '__main__':
    __init__()
    print ''.join((random_word(), random_punctuation(),
    str(random_int(2)), random_word()))
